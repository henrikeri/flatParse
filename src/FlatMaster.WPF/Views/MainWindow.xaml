<Window x:Class="FlatMaster.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:FlatMaster.WPF.ViewModels"
        xmlns:conv="clr-namespace:FlatMaster.WPF.Converters"
        Title="FlatMaster â€“ Astronomical Flat Calibration Orchestrator"
        Height="900" Width="1600" MinHeight="700" MinWidth="1200"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        Background="{StaticResource WindowBackgroundBrush}"
        FontFamily="Segoe UI"
        FontSize="13"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        TextOptions.TextFormattingMode="Display">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- Inverse bool converter for IsEnabled bindings -->
        <vm:InverseBoolConverter x:Key="InverseBoolConverter"/>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with modern gradient and branding -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" BorderThickness="0,0,0,1" 
                BorderBrush="{StaticResource BorderBrush}">
            <Grid Margin="24,16,24,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ”­" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="FlatMaster" FontSize="22" FontWeight="SemiBold" 
                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                        <TextBlock Text="Flat Calibration Orchestrator" FontSize="11" 
                                   Foreground="{StaticResource SecondaryTextBrush}" Margin="0,-2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status & Progress -->
                <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" 
                               Foreground="{StaticResource AccentBrush}" FontWeight="Medium"
                               TextAlignment="Right" Margin="0,0,0,6"/>
                    <ProgressBar IsIndeterminate="True" Height="3" Width="200" Foreground="{StaticResource AccentBrush}"
                                 Visibility="{Binding IsScanning, Converter={StaticResource BoolToVis}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Tab Content -->
        <Grid Grid.Row="1" Margin="0">
            <TabControl Background="{StaticResource WindowBackgroundBrush}" 
                        BorderThickness="0"
                        Foreground="{StaticResource PrimaryTextBrush}">
                <TabControl.Resources>
                    <!-- Custom tab styling for modern look -->
                    <Style TargetType="TabItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{StaticResource SecondaryTextBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="16,12"/>
                        <Setter Property="Margin" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="BorderThickness" Value="0,2,0,0"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <!-- Configuration Tab -->
                <TabItem Header="Configuration" Padding="16,12" Margin="0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="24,24,24,24">
                        <StackPanel>
                            <!-- PixInsight Settings (hidden when native processing is enabled) -->
                            <StackPanel Visibility="{Binding UseNativeProcessing, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <TextBlock Text="PixInsight Executable" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                                <Grid Margin="0,0,0,24">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding PixInsightPath, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="12,10" Margin="0,0,8,0" FontSize="12"
                                             BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                             Background="{StaticResource InputBackgroundBrush}"/>
                                    <Button Grid.Column="1" Content="Browse" Width="90" Height="38"
                                            Command="{Binding BrowsePixInsightCommand}"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                                </Grid>
                            </StackPanel>

                            <!-- Output Configuration -->
                            <TextBlock Text="Output Configuration" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" 
                                    Background="{StaticResource PanelBackgroundBrush}" Padding="16" CornerRadius="4"
                                    Margin="0,0,0,24">
                                <StackPanel>
                                    <RadioButton Content="Put processed files in source directories" 
                                                 IsChecked="{Binding UseReplicatedOutput, Converter={StaticResource InverseBoolConverter}}"
                                                 Margin="0,0,0,12" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    <RadioButton Content="Create separate output tree with replicated structure" 
                                                 IsChecked="{Binding UseReplicatedOutput}"
                                                 Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    
                                    <TextBlock Text="Output Root Directory" FontSize="12" 
                                               Foreground="{StaticResource SecondaryTextBrush}" Margin="0,0,0,8"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" Text="{Binding OutputRootPath, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="12,10" Margin="0,0,8,0" FontSize="12"
                                                 BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                                 Background="{StaticResource InputBackgroundBrush}"/>
                                        <Button Grid.Column="1" Content="Browse" Width="90" Height="38"
                                                Command="{Binding BrowseOutputDirectoryCommand}"
                                                Style="{StaticResource SecondaryButtonStyle}"/>
                                    </Grid>

                                    <CheckBox Content="Only copy processed files (skip non-image files)" 
                                              IsChecked="{Binding CopyOnlyProcessed}"
                                              Margin="0,16,0,0" Foreground="{StaticResource PrimaryTextBrush}"/>
                                </StackPanel>
                            </Border>

                            <!-- Delete Options -->
                            <TextBlock Text="Processing Options" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                            
                            <CheckBox Content="Use Native Processing Engine (no external dependencies)" 
                                      IsChecked="{Binding UseNativeProcessing}" 
                                      Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold" Margin="0,0,0,16"/>


                            <CheckBox Content="Delete calibrated flats after creating master (saves disk space)" 
                                      IsChecked="{Binding DeleteCalibrated}" 
                                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>

                            <CheckBox Content="Require darks (skip missing, log as failed)" 
                                      IsChecked="{Binding RequireDarks}" 
                                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,8"/>

                            <CheckBox Content="Allow processing without flats (tag in log if processed without)" 
                                      IsChecked="{Binding AllowProcessingWithoutFlats}" 
                                      Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,24"/>

                            <!-- File Roots -->
                            <TextBlock Text="Flat Base Directories" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                            <ListBox ItemsSource="{Binding FlatBaseRoots}" Height="120" Margin="0,0,0,12"
                                     IsSynchronizedWithCurrentItem="True"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Background="{StaticResource PanelBackgroundBrush}"
                                     BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <UniformGrid Rows="1" Columns="2" Margin="0,0,0,24">
                                <Button Content="+ Add Directory" Command="{Binding AddFlatRootCommand}" 
                                        Margin="0,0,8,0" Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button Content="- Remove" Command="{Binding RemoveFlatRootCommand}" 
                                        CommandParameter="{Binding FlatBaseRoots/}" Margin="8,0,0,0"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>

                            <TextBlock Text="Dark Library Directories" FontSize="14" FontWeight="SemiBold" 
                                       Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,0,12"/>
                            <ListBox ItemsSource="{Binding DarkLibraryRoots}" Height="120" Margin="0,0,0,12"
                                     IsSynchronizedWithCurrentItem="True"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     Background="{StaticResource PanelBackgroundBrush}"
                                     BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <UniformGrid Rows="1" Columns="2">
                                <Button Content="+ Add Directory" Command="{Binding AddDarkRootCommand}" 
                                        Margin="0,0,8,0" Style="{StaticResource PrimaryButtonStyle}"/>
                                <Button Content="- Remove" Command="{Binding RemoveDarkRootCommand}" 
                                        CommandParameter="{Binding DarkLibraryRoots/}" Margin="8,0,0,0"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </UniformGrid>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Scanning Tab -->
                <TabItem Header="Scan &amp; Match" Padding="16,12" Margin="0">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Action Buttons -->
                        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" 
                                BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="24">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Scan Buttons -->
                                <UniformGrid Grid.Column="0" Rows="1" Columns="2">
                                    <Button Content="ðŸ” Scan Flat Directories" 
                                            Command="{Binding ScanFlatsCommand}"
                                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                                            Style="{StaticResource PrimaryButtonStyle}" Height="44" FontSize="13"
                                            Margin="0,0,12,0"/>
                                    <Button Content="ðŸ” Scan Dark Library" 
                                            Command="{Binding ScanDarksCommand}"
                                            IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                                            Style="{StaticResource PrimaryButtonStyle}" Height="44" FontSize="13"
                                            Margin="12,0,0,0"/>
                                </UniformGrid>
                                
                                <!-- Abort Button (only visible when operation is running) -->
                                <Button Grid.Column="1" Content="â›” Abort" 
                                        Command="{Binding CancelOperationCommand}"
                                        Visibility="{Binding IsCancellable, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#D32F2F" Foreground="White" BorderBrush="#B71C1C"
                                        Height="44" FontSize="13" FontWeight="Bold" Padding="24,0"
                                        Margin="12,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="1" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E53935"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#C62828"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Results Grid -->
                        <Grid Grid.Row="1" Margin="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Flats -->
                            <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    Background="{StaticResource PanelBackgroundBrush}" CornerRadius="4">
                                <DockPanel>
                                    <Border DockPanel.Dock="Top" BorderThickness="0,0,0,1" 
                                            BorderBrush="{StaticResource BorderBrush}" Padding="16,12">
                                        <DockPanel>
                                            <TextBlock Text="ðŸ“¸ Flat Directories Found" FontSize="13" FontWeight="SemiBold"
                                                       DockPanel.Dock="Left" VerticalAlignment="Center"
                                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="âœ“ All" Command="{Binding SelectAllFlatsCommand}" 
                                                    Width="80" Margin="0,0,6,0" Style="{StaticResource SecondaryButtonStyle}"/>
                                                <Button Content="âœ— Clear" Command="{Binding DeselectAllFlatsCommand}" 
                                                    Width="80" Style="{StaticResource SecondaryButtonStyle}"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>

                                    <DataGrid ItemsSource="{Binding FlatDirectories}" 
                                              AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                              AlternatingRowBackground="#F9F9F9"
                                              GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                                              BorderThickness="0" Margin="0">
                                        <DataGrid.Columns>
                                            <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" 
                                                                    Width="40"/>
                                            <DataGridTextColumn Header="Directory" Binding="{Binding DisplayPath}" 
                                                                Width="*" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Groups" Binding="{Binding GroupCount}" 
                                                                Width="60" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="Files" Binding="{Binding FileCount}" 
                                                                Width="60" IsReadOnly="True"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </DockPanel>
                            </Border>

                            <!-- Splitter -->
                            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" 
                                          Background="{StaticResource BorderBrush}"/>

                            <!-- Darks -->
                            <Border Grid.Column="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    Background="{StaticResource PanelBackgroundBrush}" CornerRadius="4">
                                <DockPanel>
                                    <Border DockPanel.Dock="Top" BorderThickness="0,0,0,1" 
                                            BorderBrush="{StaticResource BorderBrush}" Padding="16,12">
                                        <DockPanel>
                                            <TextBlock Text="ðŸŒ‘ Dark Frame Inventory" FontSize="13" FontWeight="SemiBold"
                                                       DockPanel.Dock="Left" VerticalAlignment="Center"
                                                       Foreground="{StaticResource PrimaryTextBrush}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="âœ“ All" Command="{Binding SelectAllDarksCommand}" 
                                                    Width="80" Margin="0,0,6,0" Style="{StaticResource SecondaryButtonStyle}"/>
                                                <Button Content="âœ— Clear" Command="{Binding DeselectAllDarksCommand}" 
                                                    Width="80" Style="{StaticResource SecondaryButtonStyle}"/>
                                            </StackPanel>
                                        </DockPanel>
                                    </Border>

                                    <TreeView ItemsSource="{Binding DarkInventory}" BorderThickness="0" Margin="0">
                                        <TreeView.ItemTemplate>
                                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                                    <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,10,0"/>
                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                </StackPanel>
                                                <HierarchicalDataTemplate.ItemTemplate>
                                                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                                        <StackPanel Orientation="Horizontal" Margin="0,4">
                                                            <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,10,0"/>
                                                            <TextBlock Text="{Binding Name}"/>
                                                        </StackPanel>
                                                        <HierarchicalDataTemplate.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Orientation="Horizontal" Margin="0,4">
                                                                    <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,10,0"/>
                                                                    <TextBlock Text="{Binding FileName}" Foreground="#888"/>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </HierarchicalDataTemplate.ItemTemplate>
                                                    </HierarchicalDataTemplate>
                                                </HierarchicalDataTemplate.ItemTemplate>
                                            </HierarchicalDataTemplate>
                                        </TreeView.ItemTemplate>
                                    </TreeView>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>

                <!-- Matching Diagnostics Tab -->
                <TabItem Header="Matching Details" Padding="16,12" Margin="0">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Diagnostic Summary -->
                        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" 
                                BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="24">
                            <DockPanel>
                                <Button Content="ðŸ” Run Matching" 
                                        Command="{Binding GenerateMatchingDiagnosticsCommand}"
                                        DockPanel.Dock="Right" Style="{StaticResource AccentButtonStyle}" 
                                        Height="36" Padding="16,6" FontSize="13"/>
                                <TextBlock Text="Match selected flats against selected darks. Press Run Matching to analyze." 
                                           FontSize="12" Foreground="{StaticResource SecondaryTextBrush}"
                                           TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,16,0"/>
                            </DockPanel>
                        </Border>

                        <!-- Diagnostic Grid -->
                        <DataGrid Grid.Row="1" ItemsSource="{Binding MatchingDiagnostics}" 
                                  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                                  AlternatingRowBackground="#F9F9F9" GridLinesVisibility="Horizontal"
                                  BorderThickness="0" Margin="24" Padding="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Flat File" Binding="{Binding FlatPath}" 
                                                    Width="300" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Exposure (s)" Binding="{Binding ExposureTime}" 
                                                    Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Selected Dark" Binding="{Binding SelectedDark.FileName}" 
                                                    Width="200" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Reason" Binding="{Binding SelectionReason}" 
                                                    Width="150" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Temp Î”" Binding="{Binding TemperatureDeltaDisplay}" 
                                                    Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Confidence" Binding="{Binding ConfidenceDisplay}" 
                                                    Width="90" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Processing & Report Tab -->
                <TabItem Header="Process &amp; Report" Padding="16,12" Margin="0">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Action Button -->
                        <Border Grid.Row="0" Background="{StaticResource HeaderBackgroundBrush}" 
                                BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" Padding="24">
                            <StackPanel Orientation="Horizontal">
                                <Button Content="â–¶ï¸ Start Processing" 
                                        Command="{Binding ProcessSelectedCommand}"
                                        IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBoolConverter}}"
                                        Style="{StaticResource AccentButtonStyle}" Height="44" FontSize="14" 
                                        Padding="24,10" HorizontalAlignment="Left"/>

                                <!-- Abort Button (only visible when processing) -->
                                <Button Content="â›” Abort Processing" 
                                        Command="{Binding CancelOperationCommand}"
                                        Visibility="{Binding IsCancellable, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#D32F2F" Foreground="White" BorderBrush="#B71C1C"
                                        Height="44" FontSize="14" FontWeight="Bold" Padding="24,0"
                                        Margin="12,0,0,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="1" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#E53935"/>
                                                                <Setter Property="Cursor" Value="Hand"/>
                                                            </Trigger>
                                                            <Trigger Property="IsPressed" Value="True">
                                                                <Setter Property="Background" Value="#C62828"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Batch Progress -->
                        <Border Grid.Row="1" Background="{StaticResource PanelBackgroundBrush}" 
                                BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}" 
                                Padding="24,14"
                                Visibility="{Binding ShowBatchProgress, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <DockPanel Margin="0,0,0,8">
                                    <TextBlock Text="{Binding BatchProgressText}" FontSize="13" FontWeight="SemiBold"
                                               DockPanel.Dock="Left" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    <TextBlock Text="{Binding TimeRemainingText}" FontSize="12"
                                               DockPanel.Dock="Right" HorizontalAlignment="Right"
                                               Foreground="{StaticResource SecondaryTextBrush}"/>
                                </DockPanel>
                                <ProgressBar Value="{Binding BatchProgressValue}" Maximum="1.0" Height="10"
                                             Foreground="{StaticResource AccentBrush}" Background="#E0E0E0"/>
                            </StackPanel>
                        </Border>

                        <!-- Report & Log -->
                        <Grid Grid.Row="2" Margin="24">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Processing Report -->
                            <Border Grid.Row="0" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    Background="{StaticResource PanelBackgroundBrush}" CornerRadius="4">
                                <DockPanel>
                                    <Border DockPanel.Dock="Top" BorderThickness="0,0,0,1" 
                                            BorderBrush="{StaticResource BorderBrush}" Padding="16,12">
                                        <TextBlock Text="ðŸ“Š Processing Report" FontSize="13" FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </Border>

                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding ProcessingReportText, Mode=OneWay}" 
                                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="11"
                                                 FontFamily="Consolas" Padding="16" BorderThickness="0"
                                                 Background="Transparent" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </ScrollViewer>
                                </DockPanel>
                            </Border>

                            <!-- Splitter -->
                            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" 
                                          Background="{StaticResource BorderBrush}"/>

                            <!-- Processing Log -->
                            <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                                    Background="{StaticResource PanelBackgroundBrush}" CornerRadius="4">
                                <DockPanel>
                                    <Border DockPanel.Dock="Top" BorderThickness="0,0,0,1" 
                                            BorderBrush="{StaticResource BorderBrush}" Padding="16,12">
                                        <TextBlock Text="ðŸ“‹ Processing Log" FontSize="13" FontWeight="SemiBold"
                                                   Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </Border>

                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <TextBox Text="{Binding LogText, Mode=OneWay}" 
                                                 IsReadOnly="True" TextWrapping="Wrap" FontSize="10"
                                                 FontFamily="Consolas" Padding="16" BorderThickness="0"
                                                 Background="#1E1E1E" Foreground="#D4D4D4"/>
                                    </ScrollViewer>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource HeaderBackgroundBrush}" 
                BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}"
                Padding="24,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="FlatMaster v1.1" Foreground="{StaticResource SecondaryTextBrush}"/>
                <TextBlock Text="â€¢" Margin="12,0" Foreground="{StaticResource BorderBrush}"/>
                <TextBlock Text=".NET 8 + WPF" Foreground="{StaticResource SecondaryTextBrush}"/>
                <TextBlock Text="â€¢" Margin="12,0" Foreground="{StaticResource BorderBrush}"/>
                <TextBlock Text="PixInsight / Native Processing" Foreground="{StaticResource SecondaryTextBrush}"/>
                <TextBlock Text="â€¢" Margin="12,0" Foreground="{StaticResource BorderBrush}"/>
                <Button Content="Licenses" Click="OnLicensesClick"
                        Style="{StaticResource SecondaryButtonStyle}" FontSize="11"
                        Padding="10,2" MinHeight="24"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
